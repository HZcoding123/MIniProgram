.main{
  margin-top: 38%;
  text-align: center;
}

.logo{
  width: 120px;
  height: 100px;
}

.title{
  display: block;
  font-size: 18px;
  font-weight: 1000;
}

.word{
  display: block;
  margin-top: 10px;
  font-size: 14px;
  color: rgb(126, 66, 66);
}

.login{
  margin-top: 40px;
}

.account{
  left: 0;
  right: 0;
  margin: auto;
  width: 80%;
  height: 50px;
  border-radius: 8px;
  background-color: rgb(243, 238, 243);
  text-align: left;
  padding-left: 5%;
}

.password{
  left: 0;
  right: 0;
  margin: auto;
  margin-top: 20px;
  width: 80%;
  height: 50px;
  border-radius: 8px;
  background-color: rgb(243, 238, 243);
  text-align: left;
  padding-left: 5%;
}

.btn{
  left: 0;
  right: 0;
  margin: auto;
  margin-top: 30px;
  width: 80%;
  height: 50px;
  line-height: 50px;
  background-color: rgb(114, 206, 114);
  color: white;
  border-radius: 50px;
  box-shadow: 2px 2px 10px #909090;
}